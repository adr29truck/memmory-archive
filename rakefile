task :seed do
  ruby 'bin/db/seeder.rb'
end

task :run do
  if ENV['RACK_ENV'] == 'production'
    sh 'bundle install --without=development'
  else
    sh 'bundle install --with=development'
  end
  sh 'bundle exec rerun --ignore "*.{slim,js,css,scss,db}" "rackup --host 0.0.0.0"'
end

task :reboot do
  ruby 'bin/db/seeder.rb'
  sh 'bundle exec rerun --ignore "*.{slim,js,css,scss,db}" "rackup --host 0.0.0.0"'
end
